<!-- Thêm vào file styles.xml (hoặc themes.xml) -->
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- ... (Các style khác) -->

    <!-- Style cho các label trong Edit Profile -->
    <style name="LabelStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <!-- Style cơ bản cho mỗi hàng menu trong Profile -->
    <style name="ProfileMenuItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingVertical" tools:targetApi="26">16dp</item>
        <item name="android:paddingHorizontal" tools:targetApi="26">8dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <!-- Style cho icon bên trái trong menu Profile -->
    <style name="ProfileMenuIcon">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:tint">@color/black</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <!-- Style cho văn bản menu giữa trong menu Profile -->
    <style name="ProfileMenuText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Style cho mũi tên bên phải trong menu Profile -->
    <style name="ProfileMenuArrow">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:tint">@color/darkGrey</item>
    </style>
</resources>