<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Màu nền đỏ -->
    <solid android:color="@color/red" />
    <!-- Đảm bảo @color/red đã được định nghĩa trong colors.xml -->

    <!-- Góc bo tròn -->
    <corners android:radius="12dp" />

    <!-- Padding bên trong (Không bắt buộc, nhưng nên có cho nút) -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />
</shape>