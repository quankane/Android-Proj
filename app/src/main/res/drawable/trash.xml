<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Màu nền bên trong (trong suốt) -->
    <solid android:color="@android:color/transparent" />

    <!-- Đường viền (stroke) -->
    <stroke
        android:width="1dp"
        android:color="@color/darkGrey" />
    <!-- Sử dụng màu xám đậm. Bạn có thể thay đổi @color/darkGrey thành màu bạn muốn. -->

    <!-- Góc bo tròn -->
    <corners android:radius="8dp" />

    <!-- Padding bên trong (tùy chọn) -->
    <padding
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp" />
</shape>